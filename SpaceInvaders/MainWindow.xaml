<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="Space Invaders V 1.0" Height="600" Width="800"
        KeyDown="Window_KeyDown" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">

            <TextBlock x:Name="ScoreText" Text="Score: 0" Foreground="White" 
                   FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

            <TextBlock Text="Lives: " Foreground="White" FontSize="20" VerticalAlignment="Center"/>
            <StackPanel x:Name="LivesPanel" Orientation="Horizontal" VerticalAlignment="Center"/>

        </StackPanel>

        <Canvas x:Name="GameCanvas" Grid.Row="1" Focusable="True" ClipToBounds="True"/>

    </Grid>
</Window>
